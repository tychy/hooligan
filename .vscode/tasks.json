{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test",
            "type": "shell",
            "command": "./bin/hdb test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Unit Test",
            "type": "shell",
            "command": "./bin/hdb unittest",
            "group": "test"
        },
        {
            "label": "Build And Run",
            "type": "shell",
            "command": "gcc ${file} && ./a.out",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
